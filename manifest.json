{
"update_url": "https://clients2.google.com/service/update2/crx",

  "manifest_version": 2,
  "name": "Pan and Zoom YouTube Videos",
  "version": "1.0",
  "description": "Ctrl+Shift+Y to enter Pan and Zoom Mode on YouTube",
  "icons": { 
    "16": "img/icon16.png",
    "32": "img/icon32.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "commands": {
    "panzoom": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y"
      },
      "description": "Toggle Pan and Zoom Mode on YouTube"
    }
  },

  "content_scripts": [
    {
      "matches": ["http://*.youtube.com/watch?v=*", "https://*.youtube.com/watch?v=*"],
      "js": ["starterLink.js"]
    }

  ],

  "permissions": [
    "activeTab","*://*/*"
  ]
}